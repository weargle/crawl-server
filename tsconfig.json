{
  "compilerOptions": {
    "rootDir": ".",
    "lib": [
      "es6",
      "DOM"
    ],
    "target": "ES2020", // or higher
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "services/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
